<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 🔙 Nút quay lại -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Quay lại"
        android:layout_gravity="start" />

    <!-- Logo hoặc icon -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_app_logo"
        android:layout_marginTop="24dp"
        android:contentDescription="Logo ứng dụng" />

    <!-- Tên ứng dụng -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cooking Note"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Phiên bản -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phiên bản: 1.0.0"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Mô tả -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ứng dụng giúp bạn lưu trữ và quản lý công thức nấu ăn yêu thích."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Tác giả -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tác giả: Nguyễn Đăng Khoa - Lê Minh Huy"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="12dp" />
</LinearLayout>
