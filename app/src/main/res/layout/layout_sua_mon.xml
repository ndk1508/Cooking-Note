<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- 🔹 Thanh trên cùng -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#A9DCFF"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="Quay lại" />

        <TextView
            android:id="@+id/tvTieuDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sửa món ăn"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- 🔹 Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:paddingBottom="80dp">   <!-- 👈 Chừa khoảng trống cho menu dưới -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 🔹 Ảnh món ăn -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh món ăn:"
                android:textSize="16sp"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/imgMonAn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/edittext_border"
                android:src="@drawable/ic_image_placeholder" />

            <Button
                android:id="@+id/btnChonAnh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ảnh"
                android:backgroundTint="#03A9F4"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- 🔹 Tên món -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên món:"
                android:textSize="16sp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edtTenMon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên món ăn"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="12dp"
                android:padding="8dp" />

            <!-- 🔹 Danh mục -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục:"
                android:textSize="16sp"
                android:textColor="#000" />

            <Spinner
                android:id="@+id/spinnerDanhMuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- 🔹 Nguyên liệu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyên liệu:"
                android:textSize="16sp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edtNguyenLieu"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Nguyên liệu"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="16dp"
                android:padding="8dp" />

            <!-- 🔹 Bước làm -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bước làm:"
                android:textSize="16sp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/edtBuocLam"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:hint="Các bước thực hiện"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="24dp"
                android:padding="8dp" />


        </LinearLayout>
    </ScrollView>
    <!-- 🔹 Nút cập nhật -->
    <Button
        android:id="@+id/btnCapNhat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật"
        android:textColor="@android:color/white"
        android:backgroundTint="#2196F3"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp" />
    <!-- 🔹 Thanh điều hướng dưới -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#7DB3E6"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:elevation="6dp">

        <LinearLayout
            android:id="@+id/btnTrangChu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnYeuThich"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_heart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yêu thích"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnCaiDat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_setting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
